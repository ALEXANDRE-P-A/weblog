<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Confirm registration</title>
  <%- include("../../_share/stylesheets.ejs") %>
</head>
<body>
  <%- include("../../_share/navbar.ejs") %>
  <div class="col-lg-8 mx-auto p-3 py-md-5">
    <main role="main" class="container">
      <div class="border-bottom mb-5">
        <h1>Confirm article registration</h1>
      </div>
      <form id="submit_form">
        <div class="form-group row mb-2">
          <label for="url" class="col-sm-2 col-form-label">URL:</label>
          <div class="col-sm-10">
            <input type="text" id="url" class="form-control" name="url" value="<%= original.url %>" readonly/>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="title" class="col-sm-2 col-form-label">Title:</label>
          <div class="col-sm-10">
            <input type="text" id="title" class="form-control" name="title" value="<%= original.title %>" readonly/>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="content" class="col-sm-2 col-form-label">Content:</label>
          <div class="col-sm-10">
            <textarea type="text" id="content" class="form-control" name="content" readonly><%= original.content %></textarea>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="keywords" class="col-sm-2 col-form-label">Keyword:</label>
          <div class="col-sm-10">
            <input type="text" id="keywords" class="form-control" name="keywords" value="<%= original.keywords %>" readonly/>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="authors" class="col-sm-2 col-form-label">Author:</label>
          <div class="col-sm-10">
            <input type="text" id="authors" class="form-control" name="authors" value="<%= original.authors %>" readonly/>
          </div>
        </div>
        <div class="form-group row mb-2">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <input type="submit" id="back_btn" class="btn btn-primary" value="Back" style="width: 100px" data-method="POST" data-action="/account/posts/regist/input" />
            <input type="submit" id="execute_btn" class="btn btn-primary" value="Register" style="width: 100px" data-method="POST" data-action="/account/posts/regist/execute"/>
          </div>
        </div>
      </form>
    </main>
    <%- include("../../_share/footer.ejs") %>
  </div>
  <%- include("../../_share/javascripts.ejs") %>
  <script type="text/javascript" src="/public/javascripts/regist.js"></script>
</body>
</html>