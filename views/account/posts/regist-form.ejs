<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register Form</title>
  <%- include("../../_share/stylesheets.ejs") %>
</head>
<body>
  <%- include("../../_share/navbar.ejs") %>
  <div class="col-lg-8 mx-auto p-3 py-md-5">
    <main role="main" class="container">
      <div class="border-bottom mb-5">
        <h1>New article registration</h1>
      </div>

      <form method="POST" action="/account/posts/regist/confirm">

        <%
          let errors = locals.errors || {};
          let original = locals.original || {};
        %>

        <% if(locals.errors){ %>
          <div class="alert alert-danger text-center">
            <% for(let key in errors){ %>
              <div><i class="fa fa-exclamation-circle fa-fw mr-2"></i><%= errors[key] %></div>
            <% } %>
          </div>
        <% } %>

        <div class="form-group row mb-2">
          <label for="url" class="col-sm-2 col-form-label">URL:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="url" name="url" value="<%= original.url %>"/>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="title" class="col-sm-2 col-form-label">Title:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="title" name="title" value="<%= original.title %>"/>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="content" class="col-sm-2 col-form-label">Content:</label>
          <div class="col-sm-10">
            <textarea type="text" class="form-control" id="content" name="content"><%= original.content %></textarea>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="keywords" class="col-sm-2 col-form-label">Keyword:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="keywords" name="keywords" value="<%= original.keywords %>"/>
          </div>
        </div>
        <div class="form-group row mb-2">
          <label for="authors" class="col-sm-2 col-form-label">Author:</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="authors" name="authors" value="<%= original.authors %>"/>
          </div>
        </div>
        <div class="form-group row mb-2">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <input type="submit" class="btn btn-primary btn_scale" value="Confirm" />
          </div>
        </div>
      </form>
    </main>
    <%- include("../../_share/footer.ejs") %>
  </div>
  <%- include("../../_share/javascripts.ejs") %>
</body>
</html>